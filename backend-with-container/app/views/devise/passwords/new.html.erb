<div class="min-h-screen bg-gray-50 flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white shadow-md rounded-lg p-6 sm:p-8 mx-2">
    <div class="text-center mb-5">
      <h2 class="text-xl sm:text-2xl font-extrabold text-gray-900">Forgot your password?</h2>
      <p class="mt-1 text-xs sm:text-sm text-gray-600">Enter your email and we'll send instructions to reset your password.</p>
    </div>

    <% if flash.any? %>
      <% flash.each do |name, msg| %>
        <div class="mb-3 p-3 rounded text-sm <%= name.to_s == 'alert' || name.to_s == 'error' ? 'bg-red-50 text-red-800' : 'bg-green-50 text-green-800' %>">
          <%= msg %>
        </div>
      <% end %>
    <% end %>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-3">
        <div>
          <%= f.label :email, class: "block text-sm sm:text-base font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full px-3 py-3 sm:py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.submit "Send me reset password instructions", class: "w-full inline-flex items-center justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
