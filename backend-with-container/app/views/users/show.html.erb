<div class="min-h-screen bg-gray-50 flex items-center justify-center py-8 px-4">
	<div class="max-w-2xl w-full">
		<div class="bg-white shadow-md rounded-lg p-6 sm:p-8">
			<div class="flex items-center justify-between">
				<div>
					<h1 class="text-2xl font-extrabold text-gray-900">Your profile</h1>
					<p class="mt-1 text-sm text-gray-600">Manage your account and sign out.</p>
				</div>
				<div>
					<% if defined?(current_user) && current_user.present? %>
						<div class="text-right text-sm text-gray-500">Signed in as <span class="font-medium text-gray-800"><%= current_user.email %></span></div>
					<% end %>
				</div>
			</div>

			<div class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2">
				<div class="p-4 bg-gray-50 rounded-lg">
					<h3 class="text-sm font-semibold text-gray-800">Account</h3>
					<p class="mt-1 text-xs text-gray-600">Email: <span class="font-medium text-gray-900"><%= current_user&.email || 'â€”' %></span></p>
					<% if current_user && current_user.respond_to?(:name) && current_user.name.present? %>
						<p class="mt-1 text-xs text-gray-600">Name: <span class="font-medium text-gray-900"><%= current_user.name %></span></p>
					<% end %>
					<div class="mt-3">
						<%= link_to 'Edit account', edit_user_registration_path, class: "text-indigo-600 text-sm font-medium hover:text-indigo-500" %>
					</div>
				</div>

				<div class="p-4 bg-gray-50 rounded-lg flex flex-col justify-between">
					<div>
						<h3 class="text-sm font-semibold text-gray-800">Security</h3>
						<p class="mt-1 text-xs text-gray-600">Change your password or sign out of all sessions.</p>
					</div>
					<div class="mt-3 flex gap-2">
						<%= link_to 'Change password', edit_user_registration_path, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
						<%= button_to 'Sign out', destroy_user_session_path, method: :delete, data: { confirm: 'Sign out?' } %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
