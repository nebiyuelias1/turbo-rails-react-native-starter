<div class="min-h-screen flex items-center justify-center">
	<div class="max-w-4xl w-full">
		<div class="bg-white shadow-md rounded-lg p-6 sm:p-10">
			<div class="flex items-center space-x-4">
				<div class="flex-1">
					<h1 class="text-2xl sm:text-3xl font-extrabold text-gray-900"> 
						<% if defined?(current_user) && current_user.present? %>
							Hey <span class="text-indigo-600"><%= current_user.email.split('@').first.capitalize rescue current_user.to_s %></span>!
						<% else %>
							Hey there!
						<% end %>
					</h1>
					<p class="mt-2 text-sm text-gray-600">Welcome to your dashboard. Here are a few quick actions to get you started.</p>
				</div>

				<div class="hidden sm:flex sm:items-center">
					<div class="h-12 w-12 rounded-full bg-indigo-100 flex items-center justify-center">
						<svg class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 15c2.5 0 4.847.63 6.879 1.804M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
						</svg>
					</div>
				</div>
			</div>

			<div class="mt-6 grid gap-4 sm:grid-cols-3">
				<div class="p-4 bg-gray-50 rounded-lg shadow-sm">
					<h3 class="text-sm font-semibold text-gray-800">Edit</h3>
					<p class="mt-1 text-xs text-gray-600">Update your account details and settings.</p>
					<div class="mt-3">
						<%= link_to 'Edit Profile', edit_user_registration_path, class: "text-indigo-600 text-sm font-medium hover:text-indigo-500" %>
					</div>
				</div>

				<div class="p-4 bg-gray-50 rounded-lg shadow-sm">
					<h3 class="text-sm font-semibold text-gray-800">Security</h3>
					<p class="mt-1 text-xs text-gray-600">Change your password or enable 2FA (if available).</p>
					<div class="mt-3">
						<%= link_to 'Change password', edit_user_registration_path, class: "text-indigo-600 text-sm font-medium hover:text-indigo-500" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>