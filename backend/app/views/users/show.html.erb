<div class="max-w-4xl mx-auto py-8 sm:py-12">
  <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
    
    <%# Profile Header / Banner %>
    <div class="bg-gradient-to-r from-blue-600 to-indigo-700 h-32 sm:h-48 relative">
      <div class="absolute -bottom-12 sm:-bottom-16 left-6 sm:left-10">
        <div class="w-24 h-24 sm:w-32 sm:h-32 rounded-full border-4 border-white bg-white shadow-md flex items-center justify-center text-4xl font-bold text-blue-600 uppercase overflow-hidden">
          <% if current_user.respond_to?(:avatar_url) && current_user.avatar_url.present? %>
            <img src="<%= current_user.avatar_url %>" alt="Profile" class="w-full h-full object-cover">
          <% else %>
            <%= (current_user.name.presence || current_user.email).first %>
          <% end %>
        </div>
      </div>
    </div>

    <%# Profile Details %>
    <div class="pt-16 sm:pt-20 pb-8 px-6 sm:px-10">
      <div class="flex flex-col sm:flex-row sm:items-start justify-between gap-4 mb-8">
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">
            <%= current_user.name.presence || current_user.email.split('@').first.capitalize %>
          </h1>
          <p class="text-gray-500 font-medium"><%= current_user.email %></p>
          <div class="flex items-center gap-2 mt-2">
            <span class="inline-flex items-center rounded-full bg-green-50 px-2.5 py-0.5 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
              Member
            </span>
            <span class="text-xs text-gray-400">Joined <%= current_user.created_at.strftime("%B %Y") %></span>
          </div>
        </div>
        
        <div class="flex gap-3">
          <%= link_to edit_user_registration_path, class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 mr-2 text-gray-400">
              <path d="M5.433 13.917l1.262-3.155A4 4 0 017.58 9.42l6.92-6.918a2.121 2.121 0 013 3l-6.92 6.918c-.383.383-.84.685-1.343.886l-3.154 1.262a.5.5 0 01-.65-.65z" />
              <path d="M3.5 5.75c0-.69.56-1.25 1.25-1.25H10A.75.75 0 0010 3H4.75A2.75 2.75 0 002 5.75v9.5A2.75 2.75 0 004.75 18h9.5A2.75 2.75 0 0017 15.25V10a.75.75 0 00-1.5 0v5.25c0 .69-.56 1.25-1.25 1.25h-9.5c-.69 0-1.25-.56-1.25-1.25v-9.5z" />
            </svg>
            Edit Profile
          <% end %>
          
          <%= button_to destroy_user_session_path, method: :delete, class: "inline-flex items-center justify-center px-4 py-2 border border-red-200 shadow-sm text-sm font-medium rounded-xl text-red-600 bg-red-50 hover:bg-red-100 hover:border-red-300 transition-colors" do %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 mr-2">
               <path fill-rule="evenodd" d="M3 4.25A2.25 2.25 0 015.25 2h5.5A2.25 2.25 0 0113 4.25v2a.75.75 0 01-1.5 0v-2a.75.75 0 00-.75-.75h-5.5a.75.75 0 00-.75.75v11.5c0 .414.336.75.75.75h5.5a.75.75 0 00.75-.75v-2a.75.75 0 011.5 0v2A2.25 2.25 0 0110.75 18h-5.5A2.25 2.25 0 013 15.75V4.25z" clip-rule="evenodd" />
               <path fill-rule="evenodd" d="M6 10a.75.75 0 01.75-.75h9.546l-1.048-.943a.75.75 0 111.004-1.114l2.5 2.25a.75.75 0 010 1.114l-2.5 2.25a.75.75 0 11-1.004-1.114l1.048-.943H6.75A.75.75 0 016 10z" clip-rule="evenodd" />
            </svg>
            Sign out
          <% end %>
        </div>
      </div>

      <%# Stats / Info Grid %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-gray-50 rounded-2xl p-6 border border-gray-100 flex flex-col items-center justify-center text-center">
          <span class="text-4xl font-extrabold text-blue-600 mb-1">
             <%= current_user.try(:ratings)&.count || 0 %>
          </span>
          <span class="text-sm font-medium text-gray-500 uppercase tracking-wide">Books Rated</span>
        </div>
        
        <div class="bg-gray-50 rounded-2xl p-6 border border-gray-100 flex flex-col items-center justify-center text-center">
          <span class="text-4xl font-extrabold text-indigo-600 mb-1">0</span>
          <span class="text-sm font-medium text-gray-500 uppercase tracking-wide">Reviews Written</span>
        </div>

         <div class="bg-gray-50 rounded-2xl p-6 border border-gray-100 flex flex-col items-center justify-center text-center">
          <span class="text-4xl font-extrabold text-purple-600 mb-1">0</span>
          <span class="text-sm font-medium text-gray-500 uppercase tracking-wide">Reading Lists</span>
        </div>
      </div>

      <%# Account Security Section %>
      <div class="border-t border-gray-100 pt-8">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Account Security</h3>
        <div class="flex items-center justify-between p-4 rounded-xl border border-gray-100 bg-gray-50/50">
           <div class="flex items-center gap-4">
              <div class="p-2 bg-white rounded-lg border border-gray-200 shadow-sm text-gray-500">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
                </svg>
              </div>
              <div>
                 <p class="font-medium text-gray-900">Password</p>
                 <p class="text-sm text-gray-500">Update your password regularly to keep your account secure.</p>
              </div>
           </div>
           <%= link_to 'Update', edit_user_registration_path, class: "text-sm font-semibold text-blue-600 hover:text-blue-700" %>
        </div>
      </div>
      
    </div>
  </div>
</div>