<div class="flex-1 min-h-screen flex items-center justify-center">
  <div class="w-full bg-white shadow-md rounded-lg p-6 sm:p-8">
    <div class="text-center mb-5">
      <h2 class="text-xl sm:text-2xl font-extrabold text-gray-900">Sign in to your account</h2>
      <p class="mt-1 text-xs sm:text-sm text-gray-600">Welcome back â€” enter your details to access your account.</p>
    </div>

    <% if flash.any? %>
      <% flash.each do |name, msg| %>
        <div class="mb-3 p-3 rounded text-sm <%= name.to_s == 'alert' || name.to_s == 'error' ? 'bg-red-50 text-red-800' : 'bg-green-50 text-green-800' %>">
          <%= msg %>
        </div>
      <% end %>
    <% end %>

    <% if resource.errors.any? %>
      <div class="mb-3 p-3 border border-red-200 bg-red-50 rounded">
        <ul class="list-disc list-inside text-sm sm:text-sm text-red-700">
          <% resource.errors.full_messages.each do |m| %>
            <li><%= m %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-3">
        <div>
          <%= f.label :email, class: "block text-sm sm:text-base font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full px-3 py-3 sm:py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm sm:text-sm" %>
          </div>
        </div>

        <div class="w-full">
          <%= f.label :password, class: "label mb-1.5 text-sm" %>
          <div class="relative" data-controller="password">
            <%= f.password_field :password, autocomplete: "current-password", class: "appearance-none block w-full px-3 py-3 sm:py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm sm:text-sm", data: { password_target: "input" } %>
            <button type="button"
                    class="absolute right-2 top-1/2 -translate-y-1/2 p-2 text-neutral-500 hover:text-neutral-700 dark:text-neutral-400 dark:hover:text-neutral-200 transition-colors"
                    data-action="click->password#toggle"
                    aria-label="Toggle password visibility">
              <span data-password-target="toggleIcon">
                <svg xmlns="http://www.w3.org/2000/svg" class="size-4" width="18" height="18" viewBox="0 0 18 18"><g fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" stroke="currentColor"><path d="M9 11.75C10.5188 11.75 11.75 10.5188 11.75 9C11.75 7.48122 10.5188 6.25 9 6.25C7.48122 6.25 6.25 7.48122 6.25 9C6.25 10.5188 7.48122 11.75 9 11.75Z"></path> <path d="M15.9557 7.88669C16.3481 8.57939 16.3481 9.42049 15.9557 10.1132C15.0087 11.7849 12.7944 14.4999 9 14.4999C5.2056 14.4999 2.9912 11.7849 2.0443 10.1132C1.6519 9.42049 1.6519 8.57939 2.0443 7.88669C2.9913 6.21499 5.2056 3.5 9 3.5C12.7944 3.5 15.0088 6.21499 15.9557 7.88669Z"></path></g></svg>
              </span>
            </button>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
            <label class="flex items-center text-sm text-gray-700">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
              <span class="ml-2 text-sm">Remember me</span>
            </label>

            <div class="text-sm">
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.submit "Log in", class: "w-full inline-flex items-center justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    <% end %>

    <div class="mt-6 flex justify-center">
     <%# Use /setdomain command on botfather to set the domain of your website   %>
      <script async src="https://telegram.org/js/telegram-widget.js?22" data-telegram-login="<%= ENV['TELEGRAM_BOT_NAME'] %>" data-size="large" data-auth-url="<%= telegram_login_callback_url %>" data-request-access="write"></script>
    </div>

    <div class="mt-6 text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
