<div id="<%= dom_id book %>" class="group relative flex flex-col bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100 overflow-hidden h-full">
  <%# Image Container %>
  <div class="relative aspect-[2/3] w-full overflow-hidden bg-gray-100">
    <% if book.cover_image.present? %>
      <img src="<%= book.cover_image %>" alt="<%= book.title %>" class="h-full w-full object-cover object-center group-hover:scale-105 transition-transform duration-500">
    <% else %>
      <div class="flex h-full w-full flex-col items-center justify-center bg-gray-50 text-gray-400 p-4 text-center">
        <svg class="h-12 w-12 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        <span class="text-xs font-medium text-gray-300">No Cover</span>
      </div>
    <% end %>

    <%# Desktop Hover Actions %>
    <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-200 hidden sm:flex items-center justify-center gap-3 backdrop-blur-[2px]">
      <%= link_to book, class: "p-2.5 bg-white/90 rounded-full hover:bg-white text-gray-900 shadow-sm transition-all hover:scale-110", title: "View Details" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
        </svg>
      <% end %>
      <%= link_to edit_book_path(book), class: "p-2.5 bg-white/90 rounded-full hover:bg-white text-blue-600 shadow-sm transition-all hover:scale-110", title: "Edit Book" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125" />
        </svg>
      <% end %>
    </div>
  </div>

  <%# Card Body %>
  <div class="flex flex-1 flex-col p-4">
    <div class="flex-1">
      <h3 class="text-base font-bold text-gray-900 leading-snug mb-1 line-clamp-2 group-hover:text-blue-600 transition-colors">
        <%= link_to book.title, book, class: "focus:outline-none" %>
      </h3>
      <p class="text-sm text-gray-500 mb-2 font-medium truncate">
        <%= book.author.presence || 'Unknown Author' %>
      </p>

      <%# Rating Row %>
      <div class="flex items-center gap-1.5 mb-3">
        <div class="flex text-yellow-400">
           <%# Simple star logic or just one star with number %>
           <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
           </svg>
        </div>
        <span class="text-sm font-bold text-gray-700"><%= book.average_rating %></span>
        <span class="text-xs text-gray-400 font-normal">
          (<%= book.reviews_count %>)
        </span>
      </div>
    </div>

    <%# Footer / Mobile Actions %>
    <div class="mt-3 pt-3 border-t border-gray-100 flex items-center justify-between">
      <span class="text-xs text-gray-400 font-medium"><%= book.published_at&.strftime('%Y') || 'Unknown' %></span>
      
      <%# Mobile Only Actions %>
      <div class="sm:hidden flex gap-3">
        <%= link_to edit_book_path(book), class: "text-gray-400 hover:text-blue-600" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125" />
          </svg>
        <% end %>
        <%= button_to book, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "text-gray-400 hover:text-red-600" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</div>
